<h1>Listing beers</h1>



<div id="search_form">

	<%= search_form_for @search do |f| %>
	  <div class="field">
		<%= f.text_field :name_cont %>
	  </div>
	  <div class="actions"><%= f.submit "Search" %></div>
	<% end %>

</div>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abv</th>
      <th>Malt</th>
      <th>Hop</th>
      <th>Yeast</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.abv %></td>
        <td><%= beer.malt.name %></td>
        <td><%= beer.hop.name %></td>
        <td><%= beer.yeast.name %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p> Download: 
 <%= link_to "CSV", beers_path(format: "csv") %>

</p>

<br>

